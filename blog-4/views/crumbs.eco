<div class="row">
  <div class="span6">
    <ul class="breadcrumb">
      <% _.each slots.crumbs, (crumb, i, crumbs) -> : %>
        <% last = ((i + 1) === crumbs.length) %>
        <% crumb = slots.crumbs[i] %>
        <li class="<%= last ? 'active' : '' %>">
          <a href="<%= crumb.href %>"><%= crumb.title %></a> 
            <%- last ? '' : '<span class="divider">&raquo;</span>'%>
        </li>
      <% end %>
    </ul>
  </div>
</div>
